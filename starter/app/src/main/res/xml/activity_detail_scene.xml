<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto">

	<ConstraintSet android:id="@+id/start">
		<Constraint
			android:id="@+id/file_name_label"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/space_16dp"
			android:layout_marginEnd="@dimen/space_8dp"
			android:alpha="0"
			app:layout_constraintEnd_toStartOf="@+id/file_name_value"
			app:layout_constraintHorizontal_bias="0.5"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="@+id/file_name_value" />
		<Constraint
			android:id="@+id/file_name_value"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/space_8dp"
			android:layout_marginTop="@dimen/space_16dp"
			android:layout_marginEnd="@dimen/space_16dp"
			android:alpha="0"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintHorizontal_bias="0.5"
			app:layout_constraintStart_toEndOf="@+id/file_name_label"
			app:layout_constraintTop_toBottomOf="@+id/appBarLayout" />
		<Constraint
			android:id="@+id/status_label"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/space_16dp"
			android:layout_marginEnd="@dimen/space_8dp"
			android:alpha="0"
			app:layout_constraintEnd_toStartOf="@+id/status_value"
			app:layout_constraintHorizontal_bias="0.5"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="@+id/status_value" />
		<Constraint
			android:id="@+id/status_value"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/space_8dp"
			android:layout_marginTop="@dimen/space_16dp"
			android:layout_marginEnd="@dimen/space_16dp"
			android:alpha="0"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintHorizontal_bias="0.5"
			app:layout_constraintStart_toEndOf="@+id/status_label"
			app:layout_constraintTop_toBottomOf="@+id/file_name_value" />
		<Constraint
			android:id="@+id/button_ok"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/space_16dp"
			android:layout_marginEnd="@dimen/space_16dp"
			android:layout_marginBottom="@dimen/space_16dp"
			android:alpha="0"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="parent" />

	</ConstraintSet>

	<ConstraintSet android:id="@+id/button_start">
		<Constraint
			android:id="@+id/file_name_label"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/space_16dp"
			android:layout_marginEnd="@dimen/space_8dp"
			android:alpha="1"
			app:layout_constraintEnd_toStartOf="@+id/file_name_value"
			app:layout_constraintHorizontal_bias="0.5"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="@+id/file_name_value" />
		<Constraint
			android:id="@+id/file_name_value"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/space_8dp"
			android:layout_marginTop="@dimen/space_16dp"
			android:layout_marginEnd="@dimen/space_16dp"
			android:alpha="1"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintHorizontal_bias="0.5"
			app:layout_constraintStart_toEndOf="@+id/file_name_label"
			app:layout_constraintTop_toBottomOf="@+id/appBarLayout" />
		<Constraint
			android:id="@+id/status_label"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/space_16dp"
			android:layout_marginEnd="@dimen/space_8dp"
			android:alpha="1"
			app:layout_constraintEnd_toStartOf="@+id/status_value"
			app:layout_constraintHorizontal_bias="0.5"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="@+id/status_value" />
		<Constraint
			android:id="@+id/status_value"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/space_8dp"
			android:layout_marginTop="@dimen/space_16dp"
			android:layout_marginEnd="@dimen/space_16dp"
			android:alpha="1"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintHorizontal_bias="0.5"
			app:layout_constraintStart_toEndOf="@+id/status_label"
			app:layout_constraintTop_toBottomOf="@+id/file_name_value" />
		<Constraint
			android:id="@+id/button_ok"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/space_16dp"
			android:layout_marginEnd="@dimen/space_16dp"
			android:layout_marginBottom="@dimen/space_16dp"
			android:alpha="0"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="parent" />

	</ConstraintSet>

	<ConstraintSet android:id="@+id/end">
		<Constraint
			android:id="@+id/file_name_label"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/space_16dp"
			android:layout_marginEnd="@dimen/space_8dp"
			android:alpha="1"
			app:layout_constraintEnd_toStartOf="@+id/file_name_value"
			app:layout_constraintHorizontal_bias="0.5"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="@+id/file_name_value" />
		<Constraint
			android:id="@+id/file_name_value"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/space_8dp"
			android:layout_marginTop="@dimen/space_16dp"
			android:layout_marginEnd="@dimen/space_16dp"
			android:alpha="1"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintHorizontal_bias="0.5"
			app:layout_constraintStart_toEndOf="@+id/file_name_label"
			app:layout_constraintTop_toBottomOf="@+id/appBarLayout" />
		<Constraint
			android:id="@+id/status_label"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/space_16dp"
			android:layout_marginEnd="@dimen/space_8dp"
			android:alpha="1"
			app:layout_constraintEnd_toStartOf="@+id/status_value"
			app:layout_constraintHorizontal_bias="0.5"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="@+id/status_value" />
		<Constraint
			android:id="@+id/status_value"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/space_8dp"
			android:layout_marginTop="@dimen/space_16dp"
			android:layout_marginEnd="@dimen/space_16dp"
			android:alpha="1"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintHorizontal_bias="0.5"
			app:layout_constraintStart_toEndOf="@+id/status_label"
			app:layout_constraintTop_toBottomOf="@+id/file_name_value" />
		<Constraint
			android:id="@+id/button_ok"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/space_16dp"
			android:layout_marginEnd="@dimen/space_16dp"
			android:layout_marginBottom="@dimen/space_16dp"
			android:alpha="1"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent" />

	</ConstraintSet>

	<Transition
		app:autoTransition="animateToEnd"
		app:constraintSetEnd="@id/button_start"
		app:constraintSetStart="@+id/start"
		app:duration="500"
		app:motionInterpolator="easeIn" />

	<Transition
		app:autoTransition="animateToEnd"
		app:constraintSetEnd="@id/end"
		app:constraintSetStart="@+id/button_start"
		app:duration="500"
		app:motionInterpolator="bounce" />

</MotionScene>
